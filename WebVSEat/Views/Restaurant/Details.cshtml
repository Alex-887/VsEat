@model DataTransferObject.Restaurant

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<h4>Restaurant</h4>
<hr />

<h2>@DateTime.Now.ToLongDateString()</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Details">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdRestaurant" class="control-label"></label>
                <input asp-for="IdRestaurant" class="form-control" />
                <span asp-validation-for="IdRestaurant" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="created_at" class="control-label"></label>
                <input asp-for="created_at" class="form-control" />
                <span asp-validation-for="created_at" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCity" class="control-label"></label>
                <input asp-for="IdCity" class="form-control" />
                <span asp-validation-for="IdCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <select asp-for="name" class="form-control" asp-items="@(new SelectList(ViewBag.Names,"Value", "Text", ViewBag.Selected))"> </select>
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
