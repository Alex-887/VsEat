@model DataTransferObject.Customer


@{
    ViewBag.Title = "Home Login";
    Layout = "~/Views/Shared/_LayoutLogins.cshtml";
}

<div class="jumbotron">
    <h1>Welcome to VsEat</h1>
    <p class="lead">What are you waiting for ? Sign in !</p>
</div>


<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class=" text-danger"></div>
                <div class="col-md-4">
                    <h2>Login</h2>
                    <div class="form-group">
                        <label asp-for="login">Email address</label>
                        <input type="email" class="form-control" asp-for="login" aria-describedby="emailHelp">
                    </div>

                    <div class="form-group">
                        <label asp-for="password" for="password">Password</label>
                        <input asp-for="password" type="password" class="form-control" id="password" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Connect</button>
                </div>
            </form>
        </div>
    </div>
</div>

